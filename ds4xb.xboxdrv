#DS4 V1

[xboxdrv]
evdev-debug = true
evdev-grab = true
silent = true
quiet = true
mimic-xpad = true

[evdev-absmap]
ABS_HAT0X = dpad_x
ABS_HAT0Y = dpad_y

ABS_X = X1
ABS_Y = Y1

ABS_RX = X2
ABS_RY = Y2

ABS_Z = LT
ABS_RZ = RT

[axismap]
-Y1 = Y1
-Y2 = Y2

[evdev-keymap]
BTN_A=a
BTN_B=b
BTN_X=y
BTN_Y=x
BTN_TL=lb
BTN_TR=rb
BTN_TL2=lt
BTN_TR2=rt        
BTN_THUMBL=tl
BTN_THUMBR=tr
BTN_SELECT=select
BTN_START=start        
BTN_MODE=guide
